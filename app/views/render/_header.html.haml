.header
  .wrapper
    .header-top
      %h1.header-top__logo
        = image_tag("//www-mercari-jp.akamaized.net/assets/img/common/common/logo.svg?2265978350", alt: "mercari", width: '134', height: '36')
      %form.header-top__form
        %input{type: 'search', name: 'keyword', placeholder: '何かお探しですか？', class: 'input-default'}
        %i.header-top__mask
          %i.fas.fa-search
    .header-nav-box.clearfix
      %nav.header-nav-box__left
        .header-nav-left
          %i.header-nav-left__mask
            %i.fas.fa-list
          %span カテゴリーから探す
        .header-nav-left
          %i.header-nav-left__mask
            %i.fas.fa-tag
          %span ブランドから探す
      .header-nav-box__right
        .header-nav-right
          %i.header-nav-right__mask
            %i.far.fa-bell.fa-lg
          %span お知らせ
        .header-nav-right
          %i.header-nav-right__mask
            %i.fas.fa-check.fa-lg
          %span やることリスト
        .header-nav-right
          %i.header-nav-right__mask
            %i.fas.fa-user-circle.fa-lg
          %span マイページ
        