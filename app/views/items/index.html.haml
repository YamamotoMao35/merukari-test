.registration-page
  %noscript
    %iframe{height: 0, src: "https://www.googletagmanager.com/ns.html?id=GTM-KLPT5L5", style: "display:none;visibility:hidden", width: 0}

  .new-registration
    %header.new-registration__header
      %h1
        = link_to root_path do
          = image_tag "logo.svg", alt: "mercari"
    %main.registration-menu
      %section.registration-title
        %h2.registration-title__head
          新規会員登録
        .registration-box
          .registration-box__content
            = link_to new_user_registration_path, class: "btn-default btn-mail" do
              %i.far.fa-envelope.icon-mail
              メールアドレスで登録
            %button#facebook-login.btn-default.btn-sns.btn-sns__facebook
              %i.icon-facebook
                =image_tag "facebook-icon.svg", alt:"facebook", width: "26px",height: "26px";
              Facebookで登録
            %button#google-login.btn-default.btn-sns.btn-sns__google
              Googleで登録
    %footer.registration-footer
      %nav
        %ul.clearfix
          %li
            =link_to root_path do
              プライバシーポリシー
          %li
            =link_to root_path do
              メルカリ利用規約
          %li
            =link_to root_path do
              特定商取引に関する表記
      = link_to root_path, class:"registration-footer__logo" do
        = image_tag "logo-gray.svg", alt: "mercari", width: "80px",height: "65px"
      %p
        %small © 2019 Mercari